{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,

    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitOverride": true,
    "declaration": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "engines/*/bin/**/*",
    "engines/*/lib/**/*",
    "packages/*/bin/**/*",
    "packages/*/lib/**/*",
    "packages/*/benchmarks/**/*",
    "performance/*/lib/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "../../../PhD/**"
  ],
  "references": [
    { "path": "../../../PhD/code/traqula/packages/core" },
    { "path": "../../../PhD/code/traqula/packages/algebra-transformations-1-1" },
    { "path": "../../../PhD/code/traqula/packages/algebra-transformations-1-2" },
    { "path": "../../../PhD/code/traqula/packages/rules-sparql-1-1" }
  ]
}
