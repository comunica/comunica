{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "noImplicitOverride": true,
    "declaration": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true
  },
  "include": [
    "./engines/*/bin/**/*.ts",
    "./engines/*/lib/**/*.ts",
    "./packages/*/bin/**/*.ts",
    "./packages/*/lib/**/*.ts",
    "./packages/*/benchmarks/**/*.ts",
    "./performance/*/lib/**/*.ts"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/node_modules"
  ]
}
