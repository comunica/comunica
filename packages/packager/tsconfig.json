{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "es2021",
      "lib": [
        "es2021",
        "dom"
      ],
      "module": "CommonJS",
      "outDir": "./dist",
  
      "strict": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": false,
      "noImplicitOverride": true,
      "declaration": true,
      "downlevelIteration": true,
      "inlineSources": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "sourceMap": true
    }
  }
  