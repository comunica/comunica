{
  "name": "@comunica/runner",
  "version": "0.0.1",
  "description": "Utility module for Comunica runner modules",
  "lsd:module": "https://linkedsoftwaredependencies.org/bundles/npm/@comunica/runner",
  "lsd:components": "components/components.jsonld",
  "lsd:contexts": {
    "https://linkedsoftwaredependencies.org/contexts/comunica-runner.jsonld": "components/context.jsonld"
  },
  "main": "index.js",
  "typings": "index",
  "repository": "https://github.com/comunica/comunica/tree/master/packages/runner",
  "keywords": [
    "comunica",
    "runner"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/comunica/comunica/issues"
  },
  "homepage": "https://github.com/comunica/comunica#readme",
  "files": [
    "components",
    "lib/**/*.d.ts",
    "lib/**/*.js",
    "index.d.ts",
    "index.js"
  ],
  "peerDependencies": {
    "@comunica/bus-init": "^0.0.1",
    "@comunica/core": "^0.0.1"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "cancelable-awaiter": "^1.0.5",
    "lodash": "^4.17.4",
    "lsd-components": "^1.0.4",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@comunica/bus-init": "^0.0.1",
    "@comunica/core": "^0.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "mapCoverage": true
  },
  "scripts": {
    "test": "node \"../../node_modules/jest/bin/jest.js\" --no-cache ${1}",
    "test-watch": "node \"../../node_modules/jest/bin/jest.js\" ${1} --watch",
    "lint": "node \"../../node_modules/tslint/bin/tslint\" lib/**/*.ts test/**/*.ts --exclude '**/*.d.ts'",
    "build": "node \"../../node_modules/typescript/bin/tsc\"",
    "validate": "npm ls",
    "prepare": "npm run build"
  }
}
