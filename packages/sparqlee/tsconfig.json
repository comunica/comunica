{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "es6"
    ],
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "importHelpers": true,
    "outDir": "./dist",
    "noImplicitThis": true
  },
  "include": [
    "index.ts",
    "lib/**/*.ts",
    "bin/**/*.ts",
    "util/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/tests",
  ]
}