{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "es6"
    ],
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "importHelpers": true,

    "outDir": "./dist",
    "noImplicitThis": true
  },
  "include": [
    "**/*.ts",
    "benchmarks/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/tests/*",
    "dist/*"
  ]
}