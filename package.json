{
  "devDependencies": {
    "@types/asynciterator": "^1.1.0",
    "@types/bluebird": "^3.5.11",
    "@types/jest": "^20.0.8",
    "@types/lodash.assign": "^4.2.3",
    "@types/lodash.defaults": "^4.2.3",
    "@types/lodash.flatten": "^4.4.3",
    "@types/lodash.mapvalues": "^4.6.3",
    "@types/lodash.uniq": "^4.5.3",
    "@types/lodash.values": "^4.3.3",
    "@types/n3": "^0.0.3",
    "@types/node": "^8.0.27",
    "@types/node-fetch": "^1.6.7",
    "@types/rdf-data-model": "^1.0.1",
    "@types/rdf-js": "^1.0.0",
    "@types/uritemplate": "^0.3.4",
    "arrayify-stream": "^1.0.0",
    "asynciterator": "^1.1.0",
    "immutable": "^3.8.2",
    "jest": "^21.0.2",
    "lerna": "^2.4.0",
    "pre-commit": "^1.2.2",
    "rdf-data-model": "^1.0.0",
    "rdf-quad": "^1.0.0",
    "sparqlalgebrajs": "^0.5.0",
    "streamify-array": "^1.0.0",
    "streamify-string": "^1.0.1",
    "ts-jest": "^21.0.0",
    "tslint": "^5.7.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.5.2"
  },
  "pre-commit": [
    "build",
    "lint",
    "test"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig-test-root.json"
      }
    },
    "transform": {
      "^.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "mapCoverage": true
  },
  "scripts": {
    "test": "lerna run test --since HEAD",
    "lint": "lerna run lint --since HEAD",
    "build": "lerna run build --since HEAD",
    "postinstall": "lerna bootstrap"
  }
}
